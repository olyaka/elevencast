---
layout: page.njk
---

{% include 'header.njk' %}

<main>
  <h1>
    {{ title }}
  </h1>
  <img src="/episodes/{{ number }}/cover.png"/>
  <audio
    src="/episodes/{{ number }}/audio.mp3"
    preload="auto" controls>
  </audio>
  <ul class="player__list">
    {% for chapter in chapters %}
      <li class="player__chapter">
        {{ chapter.time }}
        {{ chapter.title }}
      </li>
    {% endfor %}
  </ul>
  {{ content | safe }}
</main>

{% include 'footer.njk' %}
